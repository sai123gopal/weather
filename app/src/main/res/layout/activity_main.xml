<?xml version="1.0" encoding="utf-8"?>
<layout  xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <data>
        <variable
            name="model"
            type="com.saigopal.weather.models.CurrentResponse" />

        <variable
            name="hModel"
            type="com.saigopal.weather.models.HourlyForecastResponse" />
        <variable
            name="location"
            type="String" />

        <import type="android.view.View"/>
    </data>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="vertical"
            tools:context=".MainActivity">

            <LinearLayout
                android:orientation="vertical"
                android:background="@drawable/weather_bg"
                android:layout_width="match_parent"
                android:id="@+id/idBigBackground"
                android:transitionName="card"
                android:gravity="center_horizontal"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_marginTop="20dp"
                    android:layout_gravity="center_horizontal"
                    android:padding="5dp"
                    android:id="@+id/idLocationChange"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:src="@drawable/outline_location_on_24"
                        android:layout_width="wrap_content"
                        android:layout_gravity="center"
                        android:layout_height="wrap_content">
                    </ImageView>
                    <TextView
                        android:layout_marginStart="5dp"
                        android:text="@{location}"
                        android:textColor="@color/white"
                        android:textSize="24sp"
                        android:id="@+id/idLocation"
                        tools:text="Location"
                        android:gravity="center"
                        android:layout_gravity="center"
                        android:textStyle="bold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                    </TextView>
                </LinearLayout>

                <ImageView
                    android:scaleType="fitCenter"
                    tools:src="@drawable/clear"
                    android:id="@+id/image"
                    android:transitionName="image"
                    android:layout_marginTop="20dp"
                    app:setWeatherImage="@{model.weather.get(0).main}"
                    android:layout_width="match_parent"
                    android:layout_height="150dp"/>

                <TextView
                    android:id="@+id/idTempText"
                    android:layout_width="wrap_content"
                    android:layout_marginTop="20dp"
                    tools:text="21\u00b0"
                    app:tempText="@{model.main.temp}"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:textSize="70sp"
                    android:layout_height="wrap_content">
                </TextView>

                <TextView
                    android:id="@+id/idTempDesc"
                    android:layout_width="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="@{model.weather.get(0).description}"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:inputType="textCapSentences"
                    tools:text="Clouds"
                    android:textSize="30sp"
                    android:layout_height="wrap_content">
                </TextView>

                <TextView
                    android:id="@+id/idDate"
                    android:layout_width="wrap_content"
                    android:layout_marginTop="2dp"
                    android:text="Today"
                    android:textColor="@color/light_gray"
                    tools:text="Monday 17"
                    android:textSize="15sp"
                    android:layout_height="wrap_content">
                </TextView>

                <LinearLayout
                    android:layout_marginTop="20dp"
                    android:layout_marginHorizontal="50dp"
                    android:layout_marginBottom="20dp"
                    android:orientation="horizontal"
                    android:id="@+id/layout"
                    android:transitionName="layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:layout_height="match_parent">

                        <ImageView
                            android:src="@drawable/ic_rain"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">
                        </ImageView>

                        <TextView
                            android:text="@{String.valueOf(model.wind.speed)}"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            tools:text="13 km/h"
                            android:textColor="@color/white"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">
                        </TextView>
                        <TextView
                            android:text="Speed"
                            android:textSize="15sp"
                            android:textColor="@color/light_gray"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">
                        </TextView>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:layout_height="match_parent">

                        <ImageView
                            android:src="@drawable/humidity"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            app:tint="@color/white">
                        </ImageView>

                        <TextView
                            android:text="@{String.valueOf(model.main.humidity)}"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            tools:text="78"
                            android:textColor="@color/white"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">
                        </TextView>
                        <TextView
                            android:text="Humidity"
                            android:textSize="15sp"
                            android:textColor="@color/light_gray"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">
                        </TextView>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:layout_height="match_parent">

                        <ImageView
                            android:src="@drawable/pressure"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:tint="@color/white">
                        </ImageView>

                        <TextView
                            android:text="@{String.valueOf(model.main.pressure)}"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            tools:text="30"
                            android:textColor="@color/white"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">
                        </TextView>
                        <TextView
                            android:text="Pressure"
                            android:textSize="15sp"
                            android:textColor="@color/light_gray"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">
                        </TextView>
                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

            <RelativeLayout
                android:layout_marginTop="20dp"
                android:layout_marginHorizontal="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:text="Today"
                    android:textColor="#0C1823"
                    android:textStyle="bold"
                    android:layout_centerVertical="true"
                    android:textSize="18sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                </TextView>
                <LinearLayout
                    android:layout_alignParentEnd="true"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:id="@+id/idMore"
                    android:layout_centerVertical="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <TextView
                        android:text="5 days"
                        android:textSize="16sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                    </TextView>
                    <ImageView
                        android:src="@drawable/baseline_arrow_back_ios_new_24"
                        android:layout_width="wrap_content"
                        android:rotation="180"
                        android:layout_height="wrap_content">
                    </ImageView>
                </LinearLayout>
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:gravity="center"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="50dp"
                android:orientation="horizontal"
                android:layout_height="wrap_content">

                <androidx.cardview.widget.CardView
                    android:layout_weight="1"
                    android:layout_marginHorizontal="5dp"
                    app:cardCornerRadius="30dp"
                    android:layout_width="0dp"
                    app:cardBackgroundColor="#0C1823"
                    android:layout_height="match_parent">
                    <LinearLayout
                        android:padding="10dp"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <TextView
                            app:tempText="@{hModel.list.get(0).main.temp}"
                            android:layout_weight="2"
                            android:textSize="18sp"
                            tools:text="20"
                            android:textStyle="bold"
                            android:textColor="@color/white"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">
                        </TextView>
                        <ImageView
                            android:layout_weight="8"
                            app:setWeatherImage="@{hModel.list.get(0).weather.get(0).main}"
                            android:layout_width="60dp"
                            android:layout_height="60dp">
                        </ImageView>
                        <TextView
                            app:setTime="@{hModel.list.get(0).dtTxt}"
                            android:layout_weight="2"
                            android:layout_width="wrap_content"
                            android:gravity="center"
                            android:textColor="@color/light_gray"
                            tools:text="10:00"
                            android:layout_height="wrap_content">
                        </TextView>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:layout_weight="1"
                    android:layout_marginHorizontal="5dp"
                    app:cardCornerRadius="30dp"
                    android:layout_width="0dp"
                    app:cardBackgroundColor="#0C1823"
                    android:layout_height="match_parent">
                    <LinearLayout
                        android:padding="10dp"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <TextView
                            app:tempText="@{hModel.list.get(1).main.temp}"
                            android:layout_weight="2"
                            android:textSize="18sp"
                            tools:text="20"
                            android:textStyle="bold"
                            android:textColor="@color/white"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">
                        </TextView>
                        <ImageView
                            android:layout_weight="8"
                            app:setWeatherImage="@{hModel.list.get(1).weather.get(0).main}"
                            android:layout_width="60dp"
                            android:layout_height="60dp">
                        </ImageView>
                        <TextView
                            app:setTime="@{hModel.list.get(1).dtTxt}"
                            android:layout_weight="2"
                            android:layout_width="wrap_content"
                            android:gravity="center"
                            android:textColor="@color/light_gray"
                            tools:text="10:00"
                            android:layout_height="wrap_content">
                        </TextView>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:layout_weight="1"
                    android:layout_marginHorizontal="5dp"
                    app:cardCornerRadius="30dp"
                    android:layout_width="0dp"
                    app:cardBackgroundColor="#0C1823"
                    android:layout_height="match_parent">
                    <LinearLayout
                        android:padding="10dp"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <TextView
                            app:tempText="@{hModel.list.get(2).main.temp}"
                            android:layout_weight="2"
                            android:textSize="20sp"
                            tools:text="20"
                            android:textStyle="bold"
                            android:textColor="@color/white"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">
                        </TextView>
                        <ImageView
                            android:layout_weight="8"
                            app:setWeatherImage="@{hModel.list.get(2).weather.get(0).main}"
                            android:layout_width="60dp"
                            android:layout_height="60dp">
                        </ImageView>
                        <TextView
                            app:setTime="@{hModel.list.get(2).dtTxt}"
                            android:layout_weight="2"
                            android:layout_width="wrap_content"
                            android:textColor="@color/light_gray"
                            android:gravity="center"
                            tools:text="10:00"
                            android:layout_height="wrap_content">
                        </TextView>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                android:layout_weight="1"
                android:layout_marginHorizontal="5dp"
                app:cardCornerRadius="30dp"
                android:layout_width="0dp"
                app:cardBackgroundColor="#0C1823"
                android:layout_height="match_parent">
                <LinearLayout
                    android:padding="10dp"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <TextView
                        app:tempText="@{hModel.list.get(3).main.temp}"
                        android:layout_weight="2"
                        android:textSize="20sp"
                        tools:text="20"
                        android:textStyle="bold"
                        android:textColor="@color/white"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                    </TextView>
                    <ImageView
                        android:layout_weight="8"
                        app:setWeatherImage="@{hModel.list.get(3).weather.get(0).main}"
                        android:layout_width="60dp"
                        android:layout_height="60dp">
                    </ImageView>
                    <TextView
                        app:setTime="@{hModel.list.get(3).dtTxt}"
                        android:layout_weight="2"
                        android:layout_width="wrap_content"
                        android:textColor="@color/light_gray"
                        android:gravity="center"
                        tools:text="10:00"
                        android:layout_height="wrap_content">
                    </TextView>
                </LinearLayout>
            </androidx.cardview.widget.CardView>



            </LinearLayout>


        </LinearLayout>
    </ScrollView>

</layout>
